@model MarketplaceV1.Models.BecomeBloggerViewModel
@{
    ViewBag.Title = "Become Blogger";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("BecomeBlogger", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Password Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "" })
    <div class="form-group">
        @Html.LabelFor(m => m.Nickname, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Become blogger" class="btn btn-default" />
        </div>
    </div>

    if (ViewBag.Message != null)
    {
        @ViewBag.Message
    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}